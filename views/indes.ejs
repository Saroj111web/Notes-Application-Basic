<!DOCTYPE html>
<html lang="en">

<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Document</title>
      <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
      <div class="main w-full min-h-screen bg-zinc-800">
            <div class="form p-10 text-white">
                  <form action="/create" method="post">
                        <input class="block  w-full rounded-md outline-none px-5 py-2 bg-zinc-500" type="Text"
                              placeholder="Title goes here " name="title">
                        <textarea class="block w-full rounded-md outline-none mt-2 px-5 py-2 resize-none bg-zinc-500"
                              placeholder="Write your task details here " name="details"></textarea>
                        <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="Submit" value="Create task">
                  </form>
            </div>
            <div class="tasks flex gap-3 p-10">
                  <% if (files.length> 0) { %>
                        <% files.forEach(function(val){ %>
                              <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-400">
                                    <!-- Some task goes here -->
                                    <h1 class="text-white text-3xl tracking-tight">
                                          <%= val %>
                                    </h1>
                                    <div class="flex w-full justify-between items-center mt-3">
                                          <a class="text-blue-800 inline-block" href="/file/<%= val %>">Read
                                                More...</a>
                                          <a class="text-zinc-800" href="/edit/<%= val%>">Edit Filename</a>
                                    </div>
                              </div>
                              <% }) %>
                                    <% } else { %>
                                          <h3 class="text-zinc-300">No tasks added...</h3>
                                          <% } %>
            </div>
</body>

</html>
